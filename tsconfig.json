{
  "extends": "ts-node/node16/tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",

    "outDir": "dist",
    "target": "ES6",

    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",

    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true
  },
  // "ts-node": { "esm": true },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
